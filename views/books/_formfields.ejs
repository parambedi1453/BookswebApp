<label>Title</label>
<input type="text" name="title"value="<%= book.title %>"  >


<label>Author</label>
<select name="author">
<% authors.forEach(author => { %>
    <% if (author.id === book.author) { %>
    <option selected label="<%= author.name %>" value="<%= author.id %>" >
    <%} else{ %>
    <option label="<%= author.name %>" value="<%= author.id %>" >
        <% } %>
<% }) %>    
</select> 

<label>Publish Date</label>
<input type="date" name="publiDate" value="<%= book.publishDate == null ? '' :book.publishDate.toISOString().split('T')[0] %>"  >
<!-- spliiting the date on T part because 2019-0--19T12:23 -->

